          </div>
      </aside>
      <!--sidebar end-->
      
      <!--main content start-->
      <section id="main-content">
          <section class="wrapper">

            <%= yield %>
            
          </section>
      </section>    
      

      <!--main content end-->
      <!--footer start-->
      <footer class="site-footer">
