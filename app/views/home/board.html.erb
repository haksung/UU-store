<style type="text/css">
	
.table-cont{
	width: 100%;
	padding: 20px;
    font-family: sans-serif;
}
.book{
    width: 100%;
    height: 150px;
    border: 1px solid #5B9AD5;
    border-radius: 5px;
    padding: 12px;
    margin-bottom: 20px;
}
.img{
	display: inline-block;
    width: 100px;
    border-right: 1px solid #5B9AD5;
    height: 120px;
    padding-right: 15px;
    margin-right: 15px;
    float: left;
}
.img img{
	width: 100%;
    height: 120px;
}

.info{
	display: inline-block;
	float: left;
}
.info p{
	margin: 0px;
	font-family: sans-serif;
	font-size: 12px;
	line-height: 21px;
}
.buy{
    display: inline-block;
    float: right;
    text-align: center;
    width: 120px;
    padding: 14px 0px 0px 0px;
    border-left: 1px solid #5B9AD5;
    height: 100px;
}
.buy p{
	font-weight: bold;
}
.buy a{
    background: #5B9AD5;
    padding: 10px 30px 10px 30px;
    color: #fff;
    text-decoration: none;
    font-family: sans-serif;
    font-size: 14px;
    line-height: 21px;
}
.buy a:hover{
    background: #3570A7;
}


</style>

<div class="table-cont">
	<% @books.slice(5*(@select_page-1), 5*(@select_page)).each do |p| %>
	<div class="book">
		<div class="img">
			<img src="">
		</div>
		<div class="info">
			<p><strong>Title: </strong><%= p.title %></p>
			<p><strong>Author: </strong><%= p.author %></p>
			<p><strong>Publisher: </strong><%= p.publisher %></p>
			<p><strong>Course Name: </strong><%= p.coursename %></p>
			<p><strong>Professor Name: </strong><%= p.profname %></p>
			<p><strong>Seller: </strong><%= p.seller_id %></p>
		</div>
		<div class="buy">
			<p><%= p.seller_price%> KRW</p>
			<a href="#" class="btn">BUY</a>
		</div>
	</div>
	<% end %>
	
	<% (1..@book_num).each do |i| %>
		<a href="/board/<%= i %>"> <%= i %></a>
	<% end %>
</div>
