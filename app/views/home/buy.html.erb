<style type="text/css">
	
.table-cont{
	width: 100%;
	padding: 20px;
    font-family: sans-serif;
}
.book{
    width: 100%;
    height: 400px;
    border: 1px solid #5B9AD5;
    border-radius: 5px;
    padding: 12px;
    margin-bottom: 20px;
}
.img{
	display: inline-block;
    width: 300px;
    border-right: 1px solid #5B9AD5;
    height: 350px;
    padding-right: 15px;
    margin-right: 15px;
    float: left;
}
.img img{
	width: 100%;
    height: 350px;
}

.info{
	display: inline-block;
	float: left;
}
.info p{
	margin: 0px;
	font-family: sans-serif;
	font-size: 12px;
	line-height: 21px;
}
.buy{
    display: inline-block;
    float: right;
    text-align: center;
    width: 140px;
    padding: 14px 0px 0px 0px;
    border-left: 1px solid #5B9AD5;
    height: 200px;
}
.buy p{
	font-weight: bold;
}
.buy a{
    background: #5B9AD5;
    padding: 10px 30px 10px 30px;
    color: #fff;
    text-decoration: none;
    font-family: sans-serif;
    font-size: 14px;
    line-height: 21px;
}
.buy a:hover{
    background: #3570A7;
}

h4{
    margin-bottom: 20px;
}

.buyer{
    display: inline-block;
    float: right;
    text-align: center;
    width: 250px;
    padding: 14px 0px 0px 0px;
    border-left: 1px solid #5B9AD5;
    height: 200px;
}

.buyer a{
    background: #5B9AD5;
    padding: 10px 30px 10px 30px;
    color: #fff;
    text-decoration: none;
    font-family: sans-serif;
    font-size: 14px;
    line-height: 21px;
    margin-top: 10px;
}
.buyer a:hover{
    background: #3570A7;
}

</style>

<div class="table-cont">
	<div class="book">
		<div class="img">
			<%= image_tag("SE.jpg") %>
		</div>
		<div class="info">
			<h4><strong>Title: </strong><%= @book.title %></h4>
			<h4><strong>Author: </strong><%= @book.author %></h4>
			<h4><strong>Major: </strong><%= @book.major %></h4>
			<h4><strong>College: </strong><%= @book.college %></h4>
			<h4><strong>Publisher: </strong><%= @book.publisher %></h4>
			<h4><strong>Course Name: </strong><%= @book.coursename %></h4>
			<h4><strong>Professor Name: </strong><%= @book.profname %></h4>
			<h4><strong>Seller: </strong><%= @book.seller_id %></h4>
		</div>
		
		<div class="buyer">
		    <% @book.buyers.each do |b| %>
		        <h4 style="float: right;"><strong><%= b.buyer_id %>: </strong><%= b.buyer_price %> <a href="/buy_now/<%= @book.id %>" class="btn">Select</a><br /></h4>
		    <% end %>
		</div>
		    
		<div class="buy">
			<p><%= @book.seller_price%> KRW</p>
			<a href="/buy_now/<%= @book.id %>" onclick="myFunction()" class="btn">Buy Now</a><br />
			<form action="/nego/<%= @book.id %>" method="post">
			    <input type="hidden" name="user_email" value="<%= @user_email %>">
			    <input name="buyer_price" type="text" class="form-control" style="margin-top: 20px; margin-left: 10px; width: 90%;"><br />
			    <button type="submit" class="btn btn-theme">Negotiate</button>
			</form>
		</div>
	</div>
</div>

<script>
function myFunction() {
    alert('Deal is finished.');
}
</script>